<div class="row justify-content-center mt-4">
    <div class="col-4 mt-4 ">
    <form method="POST" action="/login">
        {{#if notify_wrong}}
            <div class="mb-3">
                <div class="p-1 mb-1 bg-danger text-white notifcation">Wrong username or password</div>
            </div>
        {{/if}}
        <div class="mb-3">
            <label for="em_us" class="form-label">Email</label>
            <input name="em_us" type="text" class="form-control" id="em_us" >
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input name="password" type="password" class="form-control" id="exampleInputPassword1">
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Sign in </button>
        <a href="/signup" class="float-end" style="text-decoration:underline;">Sign up</a>
        </form>
    </div>
  
</div>
